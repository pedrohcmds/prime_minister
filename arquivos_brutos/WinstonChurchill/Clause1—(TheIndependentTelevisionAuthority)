                           data-hop-popover="http://hansard.parliament.uk/Commons/1954-05-05/debates/d852ccb9-f914-450a-a605-c21e005963d4/Clause1%E2%80%94(TheIndependentTelevisionAuthority)#contribution-de175eba-1bef-4d33-9ce2-ab4ba03c30d7">
