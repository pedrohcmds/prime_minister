                           data-hop-popover="http://hansard.parliament.uk/Commons/1954-05-05/debates/d852ccb9-f914-450a-a605-c21e005963d4/Clause1%E2%80%94(TheIndependentTelevisionAuthority)#contribution-cd7a5f16-d6f6-4613-9569-04f5cfbc8ebc">
