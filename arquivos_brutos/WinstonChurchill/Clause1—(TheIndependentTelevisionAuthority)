<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-44e09e5d-52a3-443e-9458-f03ec2db074d'>
            
<p class="">5.45 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-dcba82f8-98b2-4dc9-ad23-f72990e60098">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-dcba82f8-98b2-4dc9-ad23-f72990e60098">
