        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-840239de-4768-4d4f-9be1-7aac46d2e718'>
            
<p class="">5.2 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
