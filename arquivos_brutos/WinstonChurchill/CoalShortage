                           data-hop-popover="http://hansard.parliament.uk/Commons/1951-02-01/debates/f970a3b4-4aa6-45ef-bc3b-2d06dc8ed4d1/CoalShortage#contribution-27555228-c70c-415e-8204-ab5e2fc5e229">
