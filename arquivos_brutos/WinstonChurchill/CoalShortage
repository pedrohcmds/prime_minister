                           data-hop-popover="http://hansard.parliament.uk/Commons/1951-02-01/debates/f970a3b4-4aa6-45ef-bc3b-2d06dc8ed4d1/CoalShortage#contribution-e4c4d92c-e3cb-4110-95bb-614e680a17a4">
