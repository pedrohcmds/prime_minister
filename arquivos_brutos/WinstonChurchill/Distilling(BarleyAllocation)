<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-59de5708-fb2c-4ceb-a16c-112845004d8b'>
            
<p class="">62.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-4b897201-c4dc-4984-b540-86d6bf682aeb">
    <div class="col-md-9 edit-fail-error">
