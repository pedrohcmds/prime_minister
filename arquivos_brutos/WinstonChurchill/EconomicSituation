<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-9d878cee-d482-4cd8-9d9f-b3d92e9ff179'>
            
<p class="">7.3 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-a956385e-aac3-4fb8-bea8-aca75ddeef39">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-a956385e-aac3-4fb8-bea8-aca75ddeef39">
