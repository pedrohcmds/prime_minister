<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-0b4c1290-b2ba-43a6-9944-428d86378331'>
            
<p class="">8.34 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-0eb6be0d-b605-4ba4-92bf-ff637d5b73c9">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-0eb6be0d-b605-4ba4-92bf-ff637d5b73c9">
