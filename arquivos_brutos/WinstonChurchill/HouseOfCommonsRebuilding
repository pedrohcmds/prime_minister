        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-920c60e0-8159-4d28-b798-8a95260477c1'>
            
<p class="">The House divided: Ayes, 127; Noes, 3.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div>

