                           data-hop-popover="http://hansard.parliament.uk/Commons/1945-01-25/debates/be7b0d23-c59d-47b7-b3ae-95d2a1b8080e/HouseOfCommons(Rebuilding)#contribution-18cc03ad-519c-417e-87f5-8ae95994c5d5">
