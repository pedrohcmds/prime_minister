                           data-hop-popover="http://hansard.parliament.uk/Commons/1947-08-08/debates/457087e1-abae-41e8-9185-76db1506068b/SuppliesAndServices(TransitionalPowers)Bill#contribution-9d9e9cd3-759b-417d-891d-cf50b2ec4442">
