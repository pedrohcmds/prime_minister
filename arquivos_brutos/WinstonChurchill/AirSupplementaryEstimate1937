<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-856d0f4b-8b57-4035-b39d-475e34ec0e77'>
            
<p class="">5.52 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-6ef54eb8-36d1-4bc4-9728-a1c78783037e">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-6ef54eb8-36d1-4bc4-9728-a1c78783037e">
