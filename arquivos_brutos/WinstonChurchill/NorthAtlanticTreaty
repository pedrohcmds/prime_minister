                           data-hop-popover="http://hansard.parliament.uk/Commons/1949-05-12/debates/2ee6ff75-6f9e-4fb7-b751-a3fb79cd6b69/NorthAtlanticTreaty#contribution-7ddb2121-5f23-4c7f-a54e-4ffdba35d4c7">
