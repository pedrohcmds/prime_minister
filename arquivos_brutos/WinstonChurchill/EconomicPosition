<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-59c2a140-24b5-400f-b6a1-fbf12a704a02'>
            
<p class="">9.41 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-75f3675a-9c73-4d7e-9e82-b4f2143b8fdb">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-75f3675a-9c73-4d7e-9e82-b4f2143b8fdb">
