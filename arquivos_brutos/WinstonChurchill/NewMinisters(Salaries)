        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-d3876a3f-aa83-436f-95a4-b3981a3e8370">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-d3876a3f-aa83-436f-95a4-b3981a3e8370">
