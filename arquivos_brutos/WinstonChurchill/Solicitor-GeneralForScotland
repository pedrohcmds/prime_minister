        <div class="statement col-md-9  content-container " id='contribution-efd40fc9-c355-40f1-9977-b616d778d1ff'>
            
<p class="">45.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
