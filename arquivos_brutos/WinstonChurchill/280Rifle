<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-0d0abee1-bcd7-4fae-9d53-0cc5fedb459c'>
            
<p class="">50.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-dd141e61-83c1-4ed7-b62d-0aec275ff116">
    <div class="col-md-9 edit-fail-error">
