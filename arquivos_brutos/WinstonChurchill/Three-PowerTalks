<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-51baefad-b29f-4bce-8877-59f17eeb8fe1'>
            
<p class="">45.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-3f5485e4-707a-4b51-a300-6a29ad1235e0">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-3f5485e4-707a-4b51-a300-6a29ad1235e0">
