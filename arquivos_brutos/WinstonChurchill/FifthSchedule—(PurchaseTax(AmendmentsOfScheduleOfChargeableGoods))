               data-hop-popover="http://hansard.parliament.uk/Commons/1951-06-19/debates/7b2e22b6-4317-4c1a-92b3-3383fb022cd8/FifthSchedule%E2%80%94(PurchaseTax(AmendmentsOfScheduleOfChargeableGoods))#contribution-7408552e-fcd4-4c9c-b70d-7313a4cacdec">
