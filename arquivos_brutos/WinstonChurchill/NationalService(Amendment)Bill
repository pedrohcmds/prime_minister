                           data-hop-popover="http://hansard.parliament.uk/Commons/1948-12-01/debates/30d6003c-69fb-40c3-b896-8e3a67f034bd/NationalService(Amendment)Bill#contribution-20b91d0f-3a18-4a9c-9e31-12d62f8bab3d">
