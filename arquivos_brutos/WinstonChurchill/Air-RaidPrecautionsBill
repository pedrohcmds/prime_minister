<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-f9fea17f-916d-4a9e-b46d-caf2a8ac8d66'>
            
<p class="">8.2 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-70165b54-8086-4c23-a4d2-7357291b9284">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-70165b54-8086-4c23-a4d2-7357291b9284">
