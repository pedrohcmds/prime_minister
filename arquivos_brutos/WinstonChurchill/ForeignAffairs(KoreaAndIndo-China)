        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-187e19b3-e70c-4202-9ca1-544f8173d948">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-187e19b3-e70c-4202-9ca1-544f8173d948">
