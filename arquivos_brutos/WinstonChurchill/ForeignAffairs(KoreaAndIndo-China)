                           data-hop-popover="http://hansard.parliament.uk/Commons/1954-06-23/debates/60e15901-e277-4fc8-baaa-6b91378edfe4/ForeignAffairs(KoreaAndIndo-China)#contribution-1c9b1c63-591e-4315-b195-829a9e621d83">
