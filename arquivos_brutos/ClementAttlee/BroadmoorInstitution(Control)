<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-d9c0668b-d659-466b-9e61-fa59a878d6ea'>
            
<p class="">45.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-deaa0dfd-01ec-4d31-ab1d-93f303f5796a">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-deaa0dfd-01ec-4d31-ab1d-93f303f5796a">
