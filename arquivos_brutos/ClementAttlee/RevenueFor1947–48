                           data-hop-url-shorten-url="/UrlShortener/ShorternUrl"
                           data-hop-popover="http://hansard.parliament.uk/Commons/1947-04-15/debates/c4442ed4-f881-4632-9448-9e9995401363/RevenueFor1947%E2%80%9348">
                            <div class="share-icon">&nbsp;</div> Share
