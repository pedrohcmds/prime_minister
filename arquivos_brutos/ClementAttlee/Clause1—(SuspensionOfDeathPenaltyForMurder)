                           data-hop-popover="http://hansard.parliament.uk/Commons/1948-07-15/debates/5271a94e-9848-453f-8118-96040481a0f7/Clause1%E2%80%94(SuspensionOfDeathPenaltyForMurder)#contribution-bec471f2-8ddb-499f-987f-f741399f0596">
