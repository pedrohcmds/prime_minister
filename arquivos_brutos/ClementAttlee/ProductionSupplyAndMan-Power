                           data-hop-popover="http://hansard.parliament.uk/Commons/1941-01-21/debates/1efd70f0-8676-4f13-81a2-444dfcd10609/ProductionSupplyAndMan-Power#contribution-42e4d773-7b66-4c48-998e-13c9d75941ba">
