                           data-hop-popover="http://hansard.parliament.uk/Commons/1950-09-19/debates/c848e441-7fb9-4b7e-918d-bc202ac6abd5/IronAndSteelNationalisation#contribution-6e17e84a-d95c-4344-8ecc-d7cdf45b405c">
