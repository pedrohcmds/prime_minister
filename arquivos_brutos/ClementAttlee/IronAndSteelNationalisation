                           data-hop-popover="http://hansard.parliament.uk/Commons/1950-09-19/debates/c848e441-7fb9-4b7e-918d-bc202ac6abd5/IronAndSteelNationalisation#contribution-97caa0df-d684-4825-a4f1-8d4310f6f432">
