                           data-hop-popover="http://hansard.parliament.uk/Commons/1950-09-19/debates/c848e441-7fb9-4b7e-918d-bc202ac6abd5/IronAndSteelNationalisation#contribution-ae8da237-4e71-457f-a58e-255264416783">
