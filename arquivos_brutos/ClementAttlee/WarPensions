<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-d523d0a3-8180-4e9d-8d76-1186be7f6227'>
            
<p class="">45.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-aa780209-522f-449f-b182-efad6d2431cc">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-aa780209-522f-449f-b182-efad6d2431cc">
