<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-132123a6-3844-41e5-9229-e927ddf4d8de'>
            
<p class="">8.8 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-a3d4495b-6205-46d4-8322-0e054f17c1ee">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-a3d4495b-6205-46d4-8322-0e054f17c1ee">
