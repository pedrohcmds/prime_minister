<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-1d1fd50c-989b-4583-ba35-49492c246033'>
            
<p class="">45.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-831380fb-e726-4dd5-8f09-5a5831838ca9">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-831380fb-e726-4dd5-8f09-5a5831838ca9">
