        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-c2ef8995-4ffd-4696-b022-1da0446b2ade">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-c2ef8995-4ffd-4696-b022-1da0446b2ade">
