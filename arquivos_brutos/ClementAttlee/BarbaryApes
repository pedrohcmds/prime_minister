<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-964b13e9-12c6-4ac9-aa81-e9f8c45037a8'>
            
<p class="">23.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-c04c7950-42ac-4ed2-8788-3d4961bd7863">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-c04c7950-42ac-4ed2-8788-3d4961bd7863">
