                           data-hop-popover="http://hansard.parliament.uk/Commons/1938-06-23/debates/0bdf96bc-78b7-4faf-9405-e09fd58ea5ae/BombingOfBritishShips#contribution-53503b41-8ecb-4cdc-966d-a147f3abd247">
