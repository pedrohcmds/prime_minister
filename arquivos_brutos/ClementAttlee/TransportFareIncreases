<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-ed1ea528-450a-4408-8ff3-cd7527d6acb6'>
            
<p class="">9.8 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-75068c11-b56f-4b4b-a5e1-f534447616a6">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-75068c11-b56f-4b4b-a5e1-f534447616a6">
