        <div class="statement col-md-9  content-container " id='contribution-d709928b-39d1-4b48-808b-c32b687bff60'>
            
<p class="">45.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-1edb77f7-5b59-4a6b-ba84-7071614c3008">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-1edb77f7-5b59-4a6b-ba84-7071614c3008">
