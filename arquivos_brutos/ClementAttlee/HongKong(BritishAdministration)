    <div class="col-xs-12 debate-date">
        <strong>23 August 1945</strong>
    </div>

    <div class="col-xs-12 debate-date">Volume 413</div>

    <div class="col-xs-12 col-md-12">
        <div class="container">
            <div id="debateContent">
                <div class="highlightedSearchTerms"></div>
                <div class="content-container">
<div class="content-item" id="contribution-f679c110-9d83-4582-8dc1-e853a1ca7863">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-f679c110-9d83-4582-8dc1-e853a1ca7863">
