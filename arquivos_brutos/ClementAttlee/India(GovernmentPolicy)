<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-b68c2409-d5a0-4095-b9ed-be87595b79cf'>
            
<p class="">7.0 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-ba7bd1fc-6274-4b63-95b2-67794b06cbbc">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-ba7bd1fc-6274-4b63-95b2-67794b06cbbc">
