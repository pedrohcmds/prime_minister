<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-2e377776-33e4-4cb0-a95e-47531feb013c'>
            
<p class="">8.12 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-67c5ddbe-4e07-4433-a608-714860244476">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-67c5ddbe-4e07-4433-a608-714860244476">
