<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-60910f94-c174-47db-b6b8-3b42519f45ee'>
            
<p class="">6.6 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-90094ca9-68a4-49b3-9694-9c751bd93574">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-90094ca9-68a4-49b3-9694-9c751bd93574">
