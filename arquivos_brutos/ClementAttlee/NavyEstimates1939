<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-e3d5331d-ac58-4100-a7f6-f392f4dd216b'>
            
<p class="">8.36 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-0d276736-b6c8-4302-a877-e1965211cd99">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-0d276736-b6c8-4302-a877-e1965211cd99">
