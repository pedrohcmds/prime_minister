    <div class="col-xs-12 debate-date">
        <strong>11 December 1941</strong>
    </div>

    <div class="col-xs-12 debate-date">Volume 376</div>

    <div class="col-xs-12 col-md-12">
        <div class="container">
            <div id="debateContent">
                <div class="highlightedSearchTerms"></div>
                <div class="content-container">
<div class="content-item" id="contribution-e190c06b-95d0-492f-a175-1483724fa516">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-e190c06b-95d0-492f-a175-1483724fa516">
