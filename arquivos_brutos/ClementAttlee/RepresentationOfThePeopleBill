<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-c2a7e533-2734-4dbf-84cd-c7acebb1c67f'>
            
<p class="">9.47 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-ae465ef7-a65a-441f-947f-54ebbd5cbfa6">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-ae465ef7-a65a-441f-947f-54ebbd5cbfa6">
