<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-6300d523-7a10-4d10-88a5-88c9dbc6144e'>
            
<p class="">8.28 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-75897942-753b-4912-bd87-81f5a7f773ef">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-75897942-753b-4912-bd87-81f5a7f773ef">
