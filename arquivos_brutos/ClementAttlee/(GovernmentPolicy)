<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-bb92e92d-2873-42a4-959e-2fde8cb168d2'>
            
<p class="">3.40 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-595c4b93-b634-437c-87a5-0cf86efe79bf">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-595c4b93-b634-437c-87a5-0cf86efe79bf">
