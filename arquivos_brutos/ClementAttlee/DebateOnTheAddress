<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-40b2b02f-f619-4924-a6e3-08b948d23f78'>
            
<p class="">9.56 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-7f48cc28-8610-48c8-81ee-264c3733e6b4">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-7f48cc28-8610-48c8-81ee-264c3733e6b4">
