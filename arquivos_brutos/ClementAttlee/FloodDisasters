<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-384573d1-2841-43b6-afcc-b36c106aed37'>
            
<p class="">6.7 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-3fcd2f58-45ad-43cb-8993-2e4d04e07c6d">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-3fcd2f58-45ad-43cb-8993-2e4d04e07c6d">
