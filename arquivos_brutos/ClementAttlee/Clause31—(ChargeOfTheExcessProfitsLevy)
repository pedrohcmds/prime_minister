               data-hop-popover="http://hansard.parliament.uk/Commons/1952-05-20/debates/f050ec40-abaa-49a3-b1bc-da676aa525d4/Clause31%E2%80%94(ChargeOfTheExcessProfitsLevy)#contribution-7e74c47e-d609-40e5-82d3-1716c4b08a84">
