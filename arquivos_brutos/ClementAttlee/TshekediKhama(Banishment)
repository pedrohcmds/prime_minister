                           data-hop-popover="http://hansard.parliament.uk/Commons/1951-06-26/debates/71247eb7-c07e-4b46-a3ac-5cba64f61a31/TshekediKhama(Banishment)#contribution-3927ef69-6fd9-4ccd-a077-b6f1d3e22ec1">
