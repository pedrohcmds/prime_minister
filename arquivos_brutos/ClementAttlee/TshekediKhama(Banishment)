                           data-hop-popover="http://hansard.parliament.uk/Commons/1951-06-26/debates/71247eb7-c07e-4b46-a3ac-5cba64f61a31/TshekediKhama(Banishment)#contribution-9a402eae-b2bc-4142-b498-54cd8893feb2">
