<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-47466b7f-2f08-487e-b488-756045327027'>
            
<p class="">71.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-f471d987-f1fe-4ee0-ad1b-ec48f22c0e62">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-f471d987-f1fe-4ee0-ad1b-ec48f22c0e62">
