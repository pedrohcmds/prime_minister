<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-4f9dea54-89ea-4197-afd3-a269c6b8e1e6'>
            
<p class="">78.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-e6824689-9aa8-46e1-a480-29569a866c74">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-e6824689-9aa8-46e1-a480-29569a866c74">
