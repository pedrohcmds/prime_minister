<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-5421ce5a-3f3c-41aa-b2bf-100afe91e098'>
            
<p class="">45.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-3384d166-65f6-4bbb-a706-6acc9dfd72b9">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-3384d166-65f6-4bbb-a706-6acc9dfd72b9">
