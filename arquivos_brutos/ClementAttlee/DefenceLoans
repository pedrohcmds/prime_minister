<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-622146fe-4d26-4d9d-999a-8f72c5de47d3'>
            
<p class="">4.43 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-fb5ce209-117f-43f9-a839-fbed4dc6eeed">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-fb5ce209-117f-43f9-a839-fbed4dc6eeed">
