<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-cdd00e13-7cbf-409c-ba52-78df789331a1'>
            
<p class="">45.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-e97cec74-a7fb-4993-96f5-a8f276b98353">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-e97cec74-a7fb-4993-96f5-a8f276b98353">
