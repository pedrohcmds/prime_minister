<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-a28ed35f-c979-4f2a-b75d-77f66232eaa8'>
            
<p class="">5.5 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-d3f0b828-c8b9-4713-947c-7d5abf65a149">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-d3f0b828-c8b9-4713-947c-7d5abf65a149">
