<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-38d5af63-28c7-41ef-9784-01aa4c2c721c'>
            
<p class="">8.32 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-77745e86-f618-4a22-8a53-e386c1a4fb74">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-77745e86-f618-4a22-8a53-e386c1a4fb74">
