<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-7a410328-fb00-4f56-bdb5-e45c90977137'>
            
<p class="">38.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-dc0da72c-c41b-49af-bb7d-a2b4463609d5">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-dc0da72c-c41b-49af-bb7d-a2b4463609d5">
