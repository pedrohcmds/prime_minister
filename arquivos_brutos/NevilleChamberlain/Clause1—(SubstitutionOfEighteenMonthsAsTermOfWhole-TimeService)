                           data-hop-popover="http://hansard.parliament.uk/Commons/1948-12-06/debates/2cc32de8-2a74-4641-8b89-9021619ac0ba/Clause1%E2%80%94(SubstitutionOfEighteenMonthsAsTermOfWhole-TimeService)#contribution-7ef75b34-d9b3-41ca-94f2-4bcb0d755b0e">
