<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-6f6a3a99-b1f3-4e91-993e-5612cc0a603c'>
            
<p class="">20.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-232d4f97-dadb-4068-ab53-318e39769d9a">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-232d4f97-dadb-4068-ab53-318e39769d9a">
