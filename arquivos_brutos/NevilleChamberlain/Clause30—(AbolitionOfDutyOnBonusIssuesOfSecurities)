               data-hop-url-shorten-url="/UrlShortener/ShorternUrl"
               data-hop-popover="http://hansard.parliament.uk/Commons/1949-06-27/debates/5e9177ca-0d6e-4dbc-a1d4-93c6bcdf3d59/Clause30%E2%80%94(AbolitionOfDutyOnBonusIssuesOfSecurities)#contribution-c166043c-cc34-4080-b0cf-32e823699110">
