<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-70923db2-37fb-4abf-8b01-d7fc08dbcc30'>
            
<p class="">45.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-ef58445e-d558-4d82-8f3a-7f8bbfc10413">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-ef58445e-d558-4d82-8f3a-7f8bbfc10413">
