<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-e72e7cd7-037e-4c49-8e22-452bf00e817c'>
            
<p class="">57.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-8a710350-f411-44d2-8667-e9c239757a25">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-8a710350-f411-44d2-8667-e9c239757a25">
