                           data-hop-popover="http://hansard.parliament.uk/Commons/1950-05-14/debates/8ed62ef1-737c-4acd-a1cb-d00af590f922/CommonwealthOfAustraliaConstitutionBill#contribution-3a501845-b39f-4145-ad29-4c4d0a0e59bd">
