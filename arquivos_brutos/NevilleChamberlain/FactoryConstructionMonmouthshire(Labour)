<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-67c82cc1-3a7f-4092-8042-bcfcb2530e17'>
            
<p class="">38.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-29272cf4-99b5-4827-bc5b-5b3a3cf48c5f">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-29272cf4-99b5-4827-bc5b-5b3a3cf48c5f">
