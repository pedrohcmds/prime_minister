<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-0dba641c-3c33-453b-8a1a-236a78b4e8cd'>
            
<p class="">45.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-c65ef27c-af35-4736-a378-7f5f178fecf1">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-c65ef27c-af35-4736-a378-7f5f178fecf1">
