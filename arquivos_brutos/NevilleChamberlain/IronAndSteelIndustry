<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-fc58b9cd-8070-4382-af2d-84bb33684b92'>
            
<p class="">7.10 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-89c1d02a-5bc4-40ee-b1cc-03e2d954f4e1">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-89c1d02a-5bc4-40ee-b1cc-03e2d954f4e1">
