<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-c1ab2aab-8c9d-4335-8e14-639240fa01e0'>
            
<p class="">5.0 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-ac0dabae-626b-4a14-97d6-c208a72c67d2">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-ac0dabae-626b-4a14-97d6-c208a72c67d2">
