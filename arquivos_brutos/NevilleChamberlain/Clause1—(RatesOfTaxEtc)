                           data-hop-popover="http://hansard.parliament.uk/Commons/1949-11-09/debates/3a59af49-9c14-4b01-82c5-a07dd977c336/Clause1%E2%80%94(RatesOfTaxEtc)#contribution-d8b045a6-eb32-43eb-aba6-2261f26d673d">
