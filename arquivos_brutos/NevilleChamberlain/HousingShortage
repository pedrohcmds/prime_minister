                           data-hop-popover="http://hansard.parliament.uk/Commons/1945-10-17/debates/d9a4610d-1861-45b9-b667-1a737bfdc21f/HousingShortage#contribution-d023f820-7d1f-441a-a388-f9b7db5ac3e5">
