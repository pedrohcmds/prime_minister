<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-eac90f79-ee27-4069-8a46-7f765e41ea3e'>
            
<p class="">8.10 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-e3f0dcf0-576c-42c1-93c6-c864459d6eb5">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-e3f0dcf0-576c-42c1-93c6-c864459d6eb5">
