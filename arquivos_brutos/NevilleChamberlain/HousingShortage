<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-d918d788-e27f-4a1b-a1f8-f7b71c37fb0b'>
            
<p class="">5.11 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-76893772-7e57-407c-b9a3-b4d1eac36324">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-76893772-7e57-407c-b9a3-b4d1eac36324">
