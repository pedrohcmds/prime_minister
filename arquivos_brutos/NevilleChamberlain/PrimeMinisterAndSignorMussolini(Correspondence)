        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-9812f973-ce29-4641-acd0-5403196f88ce'>
            
<p class="">46.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-85227420-729f-48aa-8bf9-889c283c3424">
