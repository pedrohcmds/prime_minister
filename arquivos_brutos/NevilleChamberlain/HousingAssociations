<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-90d0f8fc-01b0-480f-9c19-4192d8e6006c'>
            
<p class="">38.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-4055bf39-8fa7-48fd-8393-12907a0add22">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-4055bf39-8fa7-48fd-8393-12907a0add22">
