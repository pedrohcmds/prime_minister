                           data-hop-url-shorten-url="/UrlShortener/ShorternUrl"
                           data-hop-popover="http://hansard.parliament.uk/Commons/1947-12-02/debates/6b4d8fb3-dd6d-4972-8b42-7fa4d0a4a726/Clause6%E2%80%94(PoolBettingDuty)">
                            <div class="share-icon">&nbsp;</div> Share
