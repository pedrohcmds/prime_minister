<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-098d218d-2885-4bed-8ef5-3b540ca3e5ff'>
            
<p class="">45.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-6251fe13-b7d0-4a44-99ce-a1131a8ba1b5">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-6251fe13-b7d0-4a44-99ce-a1131a8ba1b5">
