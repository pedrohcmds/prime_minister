<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-2165da12-8966-43ef-9972-a953450afef2'>
            
<p class="">8.0 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-dc9f3599-6676-4128-a608-18250b214abc">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-dc9f3599-6676-4128-a608-18250b214abc">
