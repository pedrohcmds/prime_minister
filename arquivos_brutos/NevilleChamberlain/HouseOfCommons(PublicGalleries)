<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-11478dbe-1004-40a8-b181-f384e1990bb3'>
            
<p class="">2.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-37ba8ff9-4df8-4a8b-ac71-1db8a0c35a4a">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-37ba8ff9-4df8-4a8b-ac71-1db8a0c35a4a">
