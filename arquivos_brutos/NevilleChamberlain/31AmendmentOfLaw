<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-7629d4ba-32a6-4b15-870d-b832205bb768'>
            
<p class="">6.17 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-e5a3f1c3-afe0-4cbd-9017-962166310f5b">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-e5a3f1c3-afe0-4cbd-9017-962166310f5b">
