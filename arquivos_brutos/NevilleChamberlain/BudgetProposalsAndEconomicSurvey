        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-a9738abc-c598-4c49-970a-a264397f1796">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-a9738abc-c598-4c49-970a-a264397f1796">
