                           data-hop-popover="http://hansard.parliament.uk/Commons/1948-11-02/debates/0117f708-07f5-4d01-b68b-f89f7066070a/Nationalisation#contribution-1009e9a4-f7b5-4923-a8d0-f00ab09cd649">
