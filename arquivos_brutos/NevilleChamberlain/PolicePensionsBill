<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-4d499549-2810-4f48-96a2-133515d1f3cc'>
            
<p class="">2.50 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-ebde06e6-7221-42a2-9f4a-fad26afdfb72">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-ebde06e6-7221-42a2-9f4a-fad26afdfb72">
