<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-a07edc9c-3437-4a00-85e8-9b80905c2de8'>
            
<p class="">59.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-60664a93-2795-4e38-9e48-a4433b594e6b">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-60664a93-2795-4e38-9e48-a4433b594e6b">
