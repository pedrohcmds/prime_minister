<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-4bc69607-a2e1-4f8c-b7aa-473cbd21aaef'>
            
<p class="">10.32 p.m.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-7d14506c-aa3f-402a-b625-811bffee8fdc">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-7d14506c-aa3f-402a-b625-811bffee8fdc">
