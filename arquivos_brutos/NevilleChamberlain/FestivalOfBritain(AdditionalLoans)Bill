<div class="content-item other-content">
        <!-- START statement -->
        <div class="statement col-md-9  content-container " id='contribution-97ceca5b-2bf1-4691-9704-17e153c0d009'>
            
<p class="">Hon. Members: Mr. George Hicks.</p>
        </div>
            <div class="col-md-3 hidden-sm hidden-xs right-column ">
            </div>
        <div class="clearfix"></div>
        <!-- END statement -->
</div><div class="content-item" id="contribution-7365cd57-567c-4996-82c9-1f337fed7ce8">
    <div class="col-md-9 edit-fail-error">
        <div class="alert alert-danger" id="alert-7365cd57-567c-4996-82c9-1f337fed7ce8">
